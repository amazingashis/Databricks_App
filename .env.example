# Environment variables for the Agentic Mapping System

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
DEBUG=True

# Database Configuration - Choose one option:
# Option 1: Databricks SQL (Recommended for Databricks Apps)
DATABRICKS_SQL_WAREHOUSE_ID=your-sql-warehouse-id
DATABRICKS_CATALOG=your-catalog-name
DATABRICKS_SCHEMA=mapping_system

# Option 2: External Database (Azure SQL, PostgreSQL, etc.)
# DATABASE_URL=postgresql://user:password@host:port/database
# DATABASE_URL=mysql://user:password@host:port/database

# Option 3: SQLite (Only for local development - NOT for Databricks Apps)
DATABASE_URL=sqlite:///mappings.db

# Databricks LLM Endpoints
DATABRICKS_TOKEN=your-databricks-token-here
CLAUDE_ENDPOINT=https://dbc-3735add4-1cb6.cloud.databricks.com/serving-endpoints/databricks-claude-sonnet-4/invocations
LLAMA_ENDPOINT=https://dbc-3735add4-1cb6.cloud.databricks.com/serving-endpoints/databricks-meta-llama-3-3-70b-instruct/invocations

# Optional: GitLab Configuration (for default credentials)
DEFAULT_GITLAB_URL=https://gitlab.example.com
DEFAULT_GITLAB_PROJECT_ID=
DEFAULT_GITLAB_TOKEN=

# Agent Configuration
DEFAULT_CONFIDENCE_THRESHOLD=0.6
MAX_PROCESSING_TIME=300
ENABLE_FALLBACK_MODELS=True

# Databricks App Configuration
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_CLUSTER_ID=your-cluster-id
DATABRICKS_WORKSPACE_ID=your-workspace-id

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log